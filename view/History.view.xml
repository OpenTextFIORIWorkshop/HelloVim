<mvc:View 
	controllerName="HelloVim.view.History"
	xmlns="sap.m" 
	xmlns:commons="sap.suite.ui.commons"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	
	<Label text="History"/>
	
     <commons:Timeline
        id="idTimeline"
        width="30%"
        showIcons="false"
        enableBackendFilter="false"
        growing="false"
        showHeaderBar="true" 
        content="{/InvoiceHistorySet}">
        <commons:content>
          <commons:TimelineItem
            id="idTimelineItem" 
            dateTime="{path:'Timestamp', formatter: 'HelloVim.util.formatter.formatTimestampDateTime'}"
            userName="{ActualAppr}" 
            title="{path:'UserAction', formatter: 'HelloVim.util.formatter.formatUserActionText'}" 
            icon="sap-icon://activity-individual"
            text="{LoggedAction}">
          </commons:TimelineItem>
        </commons:content>
      </commons:Timeline>  

</mvc:View>