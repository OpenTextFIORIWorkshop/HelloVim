<mvc:View 
	controllerName="HelloVim.view.Detail"
	xmlns="sap.m" 
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<Page 
		id="detailsPage"
		title="{i18n>DETAIL_TITLE}"
		class="sapUiFioriObjectPage"  
		showNavButton="{device>/isPhone}" 
		navButtonPress="handleNavButtonPress">
	
		<ObjectHeader id="header"
			title="{InvRequester}"
			number="{InvoiceAmt}"
			numberUnit="{Currency}"
			>
			
			<attributes id="detailsAttributes">
				<ObjectAttribute text="{VendorName}" />
				<ObjectAttribute text="{Ort01}, {Pstlz}, {Land1}" />
				<ObjectAttribute text="Phone {IpCallingSystem}" />
			</attributes>
			
			<statuses>
			<ObjectStatus text="Status: {InvStatus}" state="Error" />
			<ObjectStatus text="Invoice Date: {DueDate}" />
			</statuses>
		</ObjectHeader>
		
		<IconTabBar 
			id="iconTabBar"
			expanded="{device>/isNoPhone}" >
			<customData id="customData2">
                <core:CustomData id="coreCustomData2" key="sapDtResourcePath" value=""></core:CustomData>
            </customData>
			<items id="detailsItems">
			
				<IconTabFilter
					icon="sap-icon://batch-payments">
					    <content>
					        <mvc:XMLView viewName="HelloVim.view.LineItems" />
					    </content>
				</IconTabFilter>
			
				<IconTabFilter
					icon="sap-icon://documents"
					>
					    <content>
					        <mvc:JSView viewName="HelloVim.view.Document" height="1000px" />
					    </content>
				</IconTabFilter>
			
				<IconTabFilter
					icon="sap-icon://history">
					    <content>
					        <mvc:XMLView viewName="HelloVim.view.History" />
					    </content>
				</IconTabFilter>
			
				<IconTabFilter
					icon="sap-icon://attachment">
					    <content>
					        <mvc:XMLView viewName="HelloVim.view.Attachments" />
					    </content>
				</IconTabFilter>

				<core:ExtensionPoint name="extIconTabFilter"/>
				
			</items>
		</IconTabBar>
		
		<core:ExtensionPoint name="extDetail"/>
		
		<footer id="detailsFooter">
			<Toolbar>
                <ToolbarSpacer/>
                <Button text="Accept with comment" type="Accept" press="onAcceptWithComment" />
                <Button text="Accept" type="Accept" press="onAccept" />
                <Button text="Reject" type="Reject" press="onReject" />
          </Toolbar>
		</footer>
	</Page>
</mvc:View>
